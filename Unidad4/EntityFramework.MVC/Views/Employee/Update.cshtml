@model EntityFramework.MVC.Models.EmployeeView

@{
    ViewBag.Title = "Editar Empleado";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Editar Empleado </title>
</head>
<body>

    @Html.HiddenFor(e => e.EmployeeId)
    <div>
        <h1> Editar empleado </h1>
        @using (Html.BeginForm("Update", "Employee", FormMethod.Post))
        {

            <label> Nombre: </label> @Html.TextBoxFor(e => e.Name)
            <label> Apellido: </label> @Html.TextBoxFor(e => e.LastName)

            <input type="submit" value="Guardar" class="btn btn-success"/>
        }

    </div>
</body>
</html>
